@model MovieRent.Entities.UserApp
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/RegisterDesing/fonts/material-icon/css/material-design-iconic-font.min.css">
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Main css -->
    <link rel="stylesheet" href="~/RegisterDesing/css/style.css">
</head>
<body>

    <div class="main">
            
        <div class="container">
            <div class="signup-content">
                <form method="post" action="/AppUser/Register" id="signup-form" class="signup-form">
                    <h2>Sign up </h2>
                    @if (TempData["KayitHata"] != null)
                    {

                        <span class="text-danger">Lütfen Bütün Bilgileri Eksiksiz Girin</span>
                    }

                    <div class="form-group">
                        <input type="text" class="form-input" name="UserName" placeholder="Your Name" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" name="UserLastName" placeholder="Your Last Name" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" name="Sifre" id="password" placeholder="Password" />
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" name="KKNo" placeholder="Kredi Kartı Numarası" />
                    </div>
                    <div class="form-group">
                        <input type="week" class="form-input" name="KKSonKullanma" placeholder="Kredi Kartı Son kullanma" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" name="KKSifre" placeholder="Kredi kartı Şifre" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-input" name="TelNo" placeholder="Telefon Numarası" />
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-input" name="Email" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <input type="text" style="width:250px;height:150px;" class="form-input" name="Adres" placeholder="Adres" />
                    </div>
                    <div class="form-group">
                        <label >Premium:</label>
                        <select class="form-control" name="Userpremium_PremiumID" id="inputRole">
                            <option value="1" selected>Bronze Paket(Ayda 16 Film) - 19.99&#8378</option>
                            <option value="2">Silver Paket(Ayda 24 Film) - 29.99&#8378</option>
                            <option value="3">Gold Paket(Ayda 32 Film) - 39.99&#8378</option>
                            <option value="4">Platinum Paket(Ayda 40 Film) - 49.99&#8378</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit submit" value="Sign up" />
                        <a href="/AppUser/LogIn" class="submit-link submit">Sign in</a>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <!-- JS -->
    <script src="~/RegisterDesing/vendor/jquery/jquery.min.js"></script>
    <script src="~/RegisterDesing/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>