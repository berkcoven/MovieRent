@model List<MovieRent.Entities.Movies>
@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/css")

<div id="main">
    <div id="content">  
        <form method="post" action="/Home/Index">
            <div class="box">
                <div class="head">

                    @if (TempData["HataliFilmSecimi"] != null)
                    {
                    <p3 style="font-weight:bold; color:orangered">@TempData["HataliFilmSecimi"]</p3>
                    
                    }
                    @if (TempData["10danaz"] != null)
                    {
                    <p3 style="font-weight:bold; color:orangered">@TempData["10danaz"]</p3>
                    
                    }
                </div>
                @foreach (var item in Model)
                {
                    <div class="movie">
                        <div class="movie-image"> <span class="play"><span class="name">@item.MovieName</span></span> <a href="#"><img src="@Url.Content(item.ImagePath)" alt="" /></a> </div>
                        <div class="rating">
                                
                            <span class="ekle">
                                @Html.ActionLink("Detail", "Detail", new { id = item.MovieID }, new { @class = "btn btn-block" })
                            </span>
                        </div>

                    </div>
                }



                <div class="cl">&nbsp;</div>
            </div>
        </form>



    </div>



</div>