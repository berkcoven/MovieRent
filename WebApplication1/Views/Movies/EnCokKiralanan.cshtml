@model  List<WebApplication1.Models.MostViewedModel>
@{
    ViewBag.Title = "EnCokKiralanan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <div id="content">

        <div class="box">
            <div class="head">
            </div>
            @foreach (var item in Model)
            {
                <div class="movie">
                    <div class="movie-image"> <span class="play"><span class="name">@item.Movie.MovieName</span></span> <a href="#"><img src="@Url.Content(item.Movie.ImagePath)" alt="" /></a> </div>
                    <div class="rating" style="margin-left:auto;">

                        <span class="ekle">
                            @Html.ActionLink("Detail", "Detail", "Home", new { id = item.Movie.MovieID }, new { @class = "btn btn-block" })
                            
                        </span>
                        <h4 style="color:whitesmoke">@item.Count Times Listed </h4>
                    </div>

                </div>
            }

            <div class="cl">&nbsp;</div>
        </div>
       

    </div>
</div>